<div class="well">
  <div class="row">
    <div class="col-xs-4 text-center">
      <h4><%= load_info id, "Combo", "name" %></h4>
    </div>
    <div class="col-xs-8">
      <%= form_for order_combos_path, remote: true do |f| %>
        <div class="col-xs-4 ">
          <h4 class="text-left"> <%= t "order.unit_price" %>
            <span><%= load_info id, "Combo", "price" %></span>
          </h4>
          <div id=<%= "order-combo-row-#{id}" %>>
            <div id="<%= "order-combo-total-price-#{id}" %>">
              <h4 class="text-left"> <%= t "order.total_price" %>
                <%= load_info id, "Combo", "total_price", quantity %>
              </h4>
            </div>
          </div>
        </div>
        <div class="col-xs-8 row">
          <div class="col-xs-4">
            <%= f.number_field :quantity, value: quantity.to_i,
              class: "col-xs-8 form-control",
              id: "quantity-of-order-combo-#{id}", min: 1,
              disabled: !current_order.uncheck? %>
          </div>
          <div class="col-xs-8 text-left">
            <% if current_order.uncheck? %>
              <div class="btn-group">
                <div class="btn btn-primary
                  button-style update-combo-quantity-in-cart"
                  data-id="<%= id %>">
                  <%= t "order.update_quantity" %>
                </div>
                <div class="btn btn-danger button-style delete-combo-in-cart"
                  data-id="<%= id %>">
                  <%= t "order.delete" %>
                </div>
              </div>
            <% end %>
            <% if current_order.done? %>
             <%= render "rate", id: id, type: "Combo" %>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
