<section class="table-section go-to-book">
  <ol class="progress-book progress-medium" id="progress-order">
    <li id="booking-step-1" class="is-active" data-step="1">
      <span class="text-color-white"><%= t "table.pick_time" %></span>
    </li>
    <li id="booking-step-2" data-step="2">
      <span class="text-color-white"><%= t "table.book_table" %></span>
    </li>
    <li id="booking-step-3" data-step="3" class="progress-last">
      <span class="text-color-white"><%= t "table.confirm" %></span>
    </li>
  </ol>
  <div class="container-fluid vertical-center">
    <div class="row block reservation" id="block-0">
      <div class="col-sm-12">
        <h2 class="stylish-heading h1style font-mont heading-small">
          <%= t "table.reservation" %>
        </h2>
        <br>
      </div>
      <div class="col-sm-4 col-sm-offset-4 box">
        <%= render "reservation" %>
      </div>
    </div>
    <div class="row block" id="block-1">
      <div class="col-sm-12">
        <h2 class="stylish-heading h1style font-mont">
          <%= t "table.available_table" %>
        </h2>
      </div>
      <div class="col-sm-6 box col-sm-offset-3">
        <div class="alert alert-danger alert-dismissable fade in alert-2 hide">
          <%= t "table.alert2" %>
        </div>
        <%= render "tables/map" %>
      </div>
    </div>
    <div class="row block" id="block-2">
      <div class="col-sm-12">
        <h2 class="stylish-heading h1style font-mont heading-small">
          <%= t "table.confirm" %>
        </h2>
      </div>
      <div class="col-sm-6 box col-sm-offset-3">
        <%= render "tables/confirm", customer: @customer %>
      </div>
    </div>
  </div>
</section>
