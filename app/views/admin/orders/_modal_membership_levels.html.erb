<div class="modal">
  <div class="modal-content modal-sm">
    <div class="modal-header">
      <span class="close">&times;</span>
      <h2 class="text-center"><%= t "membership_level" %></h2>
    </div>
    <div class="modal-body">
      <div class="row row-padding">
        <div class="text-center">
          <div>
            <span class="col-sm-6 list-group-item">
              <%= t "membership_ratio" %>
            </span>
            <span class="col-sm-6 list-group-item">
              <%= t "membership_point" %>
            </span>
          </div>
          <% if MembershipLevel.all.any? %>
            <% MembershipLevel.all.each do |value| %>
              <div>
                <span class="col-sm-6 list-group-item">
                  x<%= value.ratio %>
                </span>
                <span class="col-sm-6 list-group-item">
                  <%= value.point %>
                </span>
              </div>
            <% end %>
          <% end %>
        </div>
      </div>
    </div>
    <div class="modal-footer">
    </div>
  </div>
</div>
