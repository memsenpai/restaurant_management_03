<section class="section admin-site order-admin">
  <div class="col-sm-10 col-sm-offset-1">
    <h1><%= t ".title" %></h1><br><br>
    <div class="bloc">
      <br>
      <%= render "order_info", order: @order,
        membership_coupons: @membership_coupons %>
      <br><br>
      <h3 class="title order-item">
        <%= t "order.order_items" %>
        <span></span>
      </h3>
      <div class="btn-primary btn pull-right modal-edit-order">
        <%= t "button_edit_order" %>
      </div>
      <%= render "modal_edit_order", order: @order %>
      <% unless @order.declined? %>
        <div class="btn btn-primary color-red modal-declined pull-right
          space-right"
          data-id="<%= @order.id %>">
          <%= t "modal_declined" %>
        </div>
      <% end %>
      <br><br><br>
      <%= render "order_item", order: @order %>
      <div class="text-right">
      <% if @order.done? && @order.bill.present? %>
        <div class="payment">
          <%= link_to t("order.payment"), admin_bill_path(@order.bill),
          class: "btn payment-btn-style" %>
        </div>
      <% end %>
    </div>
  </div>
  <%= render "modal", order: @order, discount: @discount %>
  <%= render "modal_declined", order: @order %>
</section>
