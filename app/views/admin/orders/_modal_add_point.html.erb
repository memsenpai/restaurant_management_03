<div id="myModal3" class="modal">
  <div class="modal-content modal-sm">
    <div class="modal-header">
      <span class="close">&times;</span>
      <h2 class="text-center">
        <%= t "membership_point_have", point: membership.point %>
      </h2>
    </div>
    <div class="modal-body">
      <div class="row row-padding">
        <div class="col-sm-8 text-center modal-part modal-left">
          <p class="discount-code-input">
            <%= t "memberhsip_input_field" %></p>
          <div class="row">
            <div class="col-sm-10 col-sm-offset-1">
              <input placeholder="<%= t "membership_point_placeholer" %>"
                class="input-form form-control membership-point-input">
              </input>
            </div>
          </div>
        </div>
        <div class="col-sm-4 text-center modal-part modal-left">
          <div class="btn-check btn-membership-check">
            <i class="fa fa-paper-plane"></i>
          </div>
        </div>
      </div>
      <%= render "point_row", point: membership.point, order: order %>
    </div>
    <div class="modal-footer">
    </div>
  </div>
</div>
