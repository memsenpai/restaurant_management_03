<section class="section user-site">
  <br><br><br><br>
  <div class="col-sm-10 col-sm-offset-1 menu block combos-wrapper">
    <div class="col-md-12 combos-header">
      <div class="col-md-3 combos-header-avatar">
        <%= image_tag @combo.image,
          class: "combos-header-avatar-style" %>
      </div>
      <div class="col-md-9">
        <div class="combos-header-title">
          <%= @combo.name %>
        </div>
        <div class="combos-header-description">
          <%= render "orders/rate",id: @combo.id, type: "Combo" %>
          <%= @combo.description %>
        </div>
        <div class="combos-header-info">
          <p class="combos-header-info-p">
            <i class="fa fa-check-square-o"></i>
            <%= t ".discount" %>
            <span class="red"><%= @combo.discount %></span>
            <i class="fa fa-percent"></i>
            <%= t ".bill" %>
          </p>
        </div>
        <div class="combos-header-info">
          <%= form_for :order_combo, remote: true do |f| %>
            <%= f.number_field :quantity, value: 1,
              id: "quantity-combo-order-#{@combo.id}",
              min: 1, class: "input-style" %>
            <%= f.hidden_field :combo_id,
              value: @combo.id, class: "combo-id" %>
            <div class="btn btn-primary add-combo-to-cart">
              <%= t ".add_to_cart" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
    <div class="col-md-12 combos-content">
      <% @combo.dishes.each do |dish| %>
        <div class="col-md-4 combos-content-item">
          <div class="combos-content-item-avatar">
            <%= image_tag dish.image,
              class: "combos-content-item-avatar-style" %>
            <div class="combos-content-item-title">
              <%= link_to dish.name, dish_path(dish),
                class: "combos-content-item-title-a" %>
            </div>
            <div class="combos-content-item-icon">
              <%= image_tag "http://happytrees.vn/wp-content/themes/giaydantuong/images/hot2.png",
                class: "combos-content-item-icon" %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</section>
